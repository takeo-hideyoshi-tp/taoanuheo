page {
  background-color: #e8e9e9;
}
.scenic .input-wrapper {
  width: 100%;
  height: 60rpx;
  background-color: #1890ff;
  padding: 20rpx 0;
  padding-bottom: 35rpx;
}
.scenic .input-wrapper input {
  display: block;
  width: 90%;
  height: 60rpx;
  margin: 0 auto;
  font-size: 22rpx;
  background: #fff;
  padding-left: 30rpx;
}
.scenic .scenic-content .item {
  background-color: #fff;
  margin-bottom: 30rpx;
}
.scenic .scenic-content .item:last-child {
  margin-bottom: 0;
}
.scenic .scenic-content .title-wrapper {
  padding: 15rpx 20rpx;
  font-size: 0;
}
.scenic .scenic-content .title-wrapper .mark {
  display: inline-block;
  border-left: 2px solid #1890ff;
  height: 20rpx;
  margin-right: 20rpx;
}
.scenic .scenic-content .title-wrapper .title {
  display: inline-block;
  font-size: 25rpx;
}
.scenic .scenic-content .scenic-item {
  font-size: 0;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-top: 1px solid rgba(231, 231, 231, 0.603);
}
.scenic .scenic-content .scenic-item .left-content {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  vertical-align: top;
}
.scenic .scenic-content .scenic-item .right-content {
  position: relative;
  display: inline-block;
  height: 200rpx;
  width: 490rpx;
  margin-left: 20rpx;
}
.scenic .scenic-content .scenic-item .right-content .scenic-name {
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.scenic .scenic-content .scenic-item .right-content .desc {
  font-size: 22rpx;
  margin-bottom: 10rpx;
}
.scenic .scenic-content .scenic-item .right-content .comment {
  font-size: 20rpx;
}
.scenic .scenic-content .scenic-item .right-content .price-distance {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
}
.scenic .scenic-content .scenic-item .right-content .price-distance .price {
  font-size: 28rpx;
  color: #faab44;
}
.scenic .scenic-content .scenic-item .right-content .price-distance .distance {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 22rpx;
  color: #e4e3e3;
}
