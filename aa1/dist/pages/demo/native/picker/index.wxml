<view class="container">
                <view class="section">
                    <view class="section__title">普通选择器</view>
                    <picker bindchange="dispatchEvent" value="{{state.index}}" range="{{state.array}}" data-change-uid="e12526" data-class-uid="c9226" data-instance-uid="{{props.instanceUid}}">
                        <view class="picker">
                            当前选择：
                            {{state.array[state.index]}}
                        </view>
                    </picker>
                </view>
                <view class="section">
                    <view class="section__title">多列选择器</view>
                    <picker mode="multiSelector" bindchange="dispatchEvent" bindcolumnchange="dispatchEvent" value="{{state.multiIndex}}" range="{{state.multiArray}}" data-change-uid="e13683" data-class-uid="c9226" data-instance-uid="{{props.instanceUid}}" data-columnchange-uid="e13819">
                        <view class="picker">
                            当前选择：
                            {{state.multiArray[0][state.multiIndex[0]]}}
                            ，
                            {{state.multiArray[1][state.multiIndex[1]]}}
                            ，
                            {{state.multiArray[2][state.multiIndex[2]]}}
                        </view>
                    </picker>
                </view>
                <view class="section">
                    <view class="section__title">时间选择器</view>
                    <picker mode="time" value="{{state.time}}" start="09:01" end="21:01" bindchange="dispatchEvent" data-change-uid="e15708" data-class-uid="c9226" data-instance-uid="{{props.instanceUid}}">
                        <view class="picker">当前选择: {{state.time}}</view>
                    </picker>
                </view>

                <view class="section">
                    <view class="section__title">日期选择器</view>
                    <picker mode="date" value="{{state.date}}" start="2015-09-01" end="2017-09-01" bindchange="dispatchEvent" data-change-uid="e16706" data-class-uid="c9226" data-instance-uid="{{props.instanceUid}}">
                        <view class="picker">当前选择: {{state.date}}</view>
                    </picker>
                </view>
                <view class="section">
                    <view class="section__title">省市区选择器</view>
                    <picker mode="region" bindchange="dispatchEvent" value="{{state.region}}" custom-item="{{state.customItem}}" data-change-uid="e17446" data-class-uid="c9226" data-instance-uid="{{props.instanceUid}}">
                        <view class="picker">
                            当前选择：
                            {{state.region[0]}}，{{state.region[1]}}，
                            {{state.region[2]}}
                        </view>
                    </picker>
                </view>
            </view>