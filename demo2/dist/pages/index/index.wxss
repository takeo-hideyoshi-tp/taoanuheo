.page {
  background: #fff;
  margin: 0;
}
.page .top-image {
  box-sizing: border-box;
  width: 750rpx;
  height: 184rpx;
}
.page .nav-wrapper {
  width: 100%;
  padding: 10rpx 20rpx;
  font-size: 0;
}
.page .nav-wrapper .radius-top-left image {
  border-radius: 5px 0 0 0;
}
.page .nav-wrapper .radius-top-right image {
  border-radius: 0 5px 0 0;
}
.page .nav-wrapper .radius-bottom-left image {
  border-radius: 0 0 0 5px;
}
.page .nav-wrapper .radius-bottom-right image {
  border-radius: 0 0 5px  0;
}
.page .nav-wrapper .item-wrapper {
  margin-bottom: 4rpx;
  position: relative;
  box-sizing: border-box;
  width: 236rpx;
  display: inline-block;
  font-size: 0;
}
.page .nav-wrapper .item-wrapper .itemBgc {
  padding: 0 2rpx;
  box-sizing: border-box;
  width: 236rpx;
  height: 137rpx;
}
.page .nav-wrapper .item-wrapper .title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 25rpx;
  color: #fff;
}
.page .nav-wrapper .item-wrapper .special-text {
  position: absolute;
  top: 5%;
  left: 4%;
  font-size: 19rpx;
  color: #bd1313;
}
.page .tool-wrapper {
  display: flex;
  flex-direction: row;
}
.page .tool-wrapper .tool-item {
  flex: 1;
  text-align: center;
}
.page .tool-wrapper .tool-item image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}
.page .tool-wrapper .tool-item text {
  font-size: 22rpx;
}
.page .special-offer {
  padding: 0 15rpx;
}
.page .special-offer .title {
  font-size: 35rpx;
  margin: 20rpx 10rpx;
  margin-top: 50rpx;
}
.page .special-offer-wrapper {
  height: 130rpx !important;
  display: flex;
  flex-direction: row;
}
.page .special-offer-wrapper .special-offer-item {
  position: relative;
  flex: 1;
}
.page .special-offer-wrapper .special-offer-item image {
  display: block;
  margin: 0 auto;
  width: 230rpx;
  height: 130rpx;
  border-radius: 4px;
}
.page .special-offer-wrapper .special-offer-item text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 26rpx;
}
.page .activity {
  padding: 0 15rpx;
  padding-bottom: 40rpx;
}
.page .activity .title {
  font-size: 35rpx;
  margin: 20rpx 10rpx;
  margin-top: 50rpx;
}
.page .activity .activity-wrapper {
  display: flex;
}
.page .activity .activity-wrapper .left-content,
.page .activity .activity-wrapper .right-content {
  flex: 1 1 365rpx;
}
.page .activity .activity-wrapper .left-content {
  position: relative;
}
.page .activity .activity-wrapper .left-content image {
  display: block;
  box-sizing: border-box;
  width: 360rpx;
  height: 360rpx;
  border-radius: 4px;
  border: 1px solid #e4e3e3;
}
.page .activity .activity-wrapper .left-content .desc {
  color: #0674f3;
}
.page .activity .activity-wrapper .right-content .right-content-wrapper {
  position: relative;
}
.page .activity .activity-wrapper .right-content .right-content-wrapper:first-child {
  margin-bottom: 10rpx;
}
.page .activity .activity-wrapper .right-content image {
  box-sizing: border-box;
  display: block;
  width: 350rpx;
  height: 175rpx;
  border-radius: 4px;
  border: 1px solid #e4e3e3;
}
.page .activity .activity-wrapper .content {
  position: absolute;
  left: 15rpx;
  top: 15rpx;
}
.page .activity .activity-wrapper .content .title {
  display: block;
  font-size: 28rpx;
  margin: 0;
}
.page .activity .activity-wrapper .content .desc {
  display: block;
  font-size: 20rpx;
  color: #aa9f6f;
}
