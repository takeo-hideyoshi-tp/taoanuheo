<view class="city-select">
                <view class="search-wrapper">
                    <input type="text" placeholder="搜索目的地" />
                    <image src="../../../assets/image/search.png" />
                </view>
                <block><block wx:if="{{state.isSearch}}"><view class="search-container">
                            <block wx:for="{{state.searchResult}}" wx:for-item="item" wx:for-index="index" wx:key="{{index}}"><view class="search-result-item">{{item}}</view></block>
                        </view></block><block wx:else="true"><view class="city-wrapper">
                            <block wx:for="{{state.data}}" wx:for-item="item" wx:for-index="i2431" wx:key="{{i2431}}"><view class="city-item-wrapper">
                                            <view class="title">{{item.title}}</view>     
                                            <view class="city-item">
                                                <block wx:for="{{item.data}}" wx:for-item="item" wx:for-index="index" wx:key="{{index}}"><view bindtap="dispatchEvent" class="{{'item ' + ((index + 1) % 4 === 0 ? 'no-margin-left' : '')}}" data-tap-uid="e5932" data-class-uid="c3518" data-key="{{i2431 + '-' + index}}">{{item}}</view></block>
                                            </view>
                                        </view></block>
                        </view></block></block>
            </view>