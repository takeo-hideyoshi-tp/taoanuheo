page {
  background-color: #f5f5f5;
}
.user-center {
  color: #000;
}
.user-center .user-information {
  background-color: #fff;
  font-size: 0;
  margin-bottom: 1px;
  padding: 50rpx 0;
  padding-left: 50rpx;
}
.user-center .user-information image {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  vertical-align: top;
}
.user-center .user-information .user-name {
  display: inline-block;
  line-height: 150rpx;
  margin-left: 20rpx;
  font-size: 31rpx;
}
.user-center .qunar-information {
  position: relative;
  padding: 0 30rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  line-height: 90rpx;
  font-size: 27rpx;
}
.user-center .qunar-information .right-content {
  position: absolute;
  top: 0;
  right: 30rpx;
  line-height: 90rpx;
}
.user-center .qunar-information .right-content .right-message {
  margin-right: 15rpx;
}
.user-center .qunar-information .right-content image {
  width: 12rpx;
  height: 21rpx;
}
.user-center .menu-item {
  position: relative;
  margin-bottom: 1px;
  padding: 0 30rpx;
  background-color: #fff;
  line-height: 90rpx;
  font-size: 27rpx;
  letter-spacing: 1rpx;
}
.user-center .menu-item:last-child {
  margin-bottom: 0;
}
.user-center .menu-item .menu-item-title {
  display: inline-block;
  font-size: 27rpx;
}
.user-center .menu-item .high-light {
  color: #40a9ff;
}
.user-center .menu-item image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  width: 12rpx;
  height: 21rpx;
}
