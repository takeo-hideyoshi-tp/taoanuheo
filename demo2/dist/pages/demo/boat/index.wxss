page {
  position: relative;
  background-color: #3399ff;
}
.boat {
  position: absolute;
  top: 180rpx;
  left: 0;
  width: 100%;
}
.boat .content {
  background-color: #fff;
  padding: 30rpx 25rpx;
  padding-bottom: 50rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
}
.boat .content .city-select-container {
  position: relative;
  margin-bottom: 40rpx;
}
.boat .content .city-select-container .dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}
.boat .content .city-select-container .orgin-city-wrapper {
  width: 250rpx;
  font-size: 38rpx;
  border-bottom: 1px solid #bdbcbc;
  padding-bottom: 10rpx;
}
.boat .content .city-select-container .orgin-city-wrapper .tip-wrapper {
  font-size: 22rpx;
  color: #b6b6b6;
}
.boat .content .city-select-container .orgin-city-wrapper .tip-wrapper .dot {
  background-color: #44f87a;
}
.boat .content .city-select-container .target-city-wrapper {
  width: 250rpx;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 38rpx;
  border-bottom: 1px solid #bdbcbc;
  text-align: right;
  padding-bottom: 10rpx;
}
.boat .content .city-select-container .target-city-wrapper .tip-wrapper {
  font-size: 22rpx;
  color: #b6b6b6;
}
.boat .content .city-select-container .target-city-wrapper .tip-wrapper .dot {
  background-color: #e45d5d;
}
.boat .content .city-select-container .switch-logo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70rpx;
  height: 70rpx;
  border-radius: 36rpx;
  border: 1px solid #000;
}
.boat .content .city-select-container .switch-logo image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 46rpx;
  height: 32rpx;
}
.boat .content .date-select-container {
  margin-bottom: 40rpx;
}
.boat .content .date-select-container .title {
  font-size: 24rpx;
  color: #b6b6b6;
}
.boat .content .date-select-container .date {
  font-size: 38rpx;
}
.boat .content .search-btn {
  width: 100%;
  border-radius: 37rpx;
  line-height: 74rpx;
  text-align: center;
  color: #fff;
  background-color: #f38e3c;
  font-size: 38rpx;
}
