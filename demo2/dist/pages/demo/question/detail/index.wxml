<view class="detail">
                <view class="question-detail">
                    <view class="title">{{state.data.question}}</view>
                    <view class="city">{{state.data.city}}</view>
                    <view class="other-infortion">
                        <image src="{{state.data.userImage}}" />
                        <text class="userName">{{state.data.userName}}</text>
                        <text class="post-date">{{state.data.date}}</text>
                        <view class="eye-wrapper">
                            <image src="../../../../assets/image/eye.png" />
                            <text class="eye-num">{{state.data.eyeNum}}</text>
                        </view>
                    </view>
                </view>
                <view class="question-prompt">
                    <text>{{'共' + state.data.answerNum + '个回答'}}</text>
                    <view bindtap="dispatchEvent" class="sort-wrapper" data-tap-uid="e4031" data-class-uid="c3416">
                        <image src="../../../../assets/image/sort.png" />
                        <text><block><block wx:if="{{state.sortkey === 'byTime'}}">{{'按时间排序'}}</block><block wx:else="true">{{'按热度排序'}}</block></block></text>
                    </view>
                </view>
                <block wx:for="{{state.answer}}" wx:for-item="item" wx:for-index="index" wx:key="{{index}}"><view class="answer-wrapper">
                                <view class="user-wrapper">
                                    <image src="{{item.userImage}}" />
                                    <view class="name-time">
                                        <text class="name">{{item.userName}}</text>
                                        <text class="time">{{item.time}}</text>
                                    </view>
                                </view>
                                <view class="answer-desc">{{item.desc}}</view>
                                <view class="agree-with-wrapper">
                                    <image src="../../../../assets/image/agree_with.png" />
                                    <text>{{item.agreeWithNum}}</text>
                                </view>
                            </view></block>
            </view>