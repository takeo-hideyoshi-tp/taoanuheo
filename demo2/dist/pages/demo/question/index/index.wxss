page {
  position: relative;
  background-color: #f0f0f0;
}
.question .nav-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  padding: 0 30rpx;
  padding-bottom: 5rpx;
  background-color: #fff;
}
.question .nav-wrapper .nav-btn {
  display: inline-block;
  margin-right: 50rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000;
}
.question .nav-wrapper .nav-btn:last-child {
  margin-right: 0;
}
.question .nav-wrapper .nav-btn.active {
  color: #22a0fa;
}
.question .nav-wrapper .nav-btn .open-icon {
  display: inline-block;
  margin-left: 10rpx;
  width: 25rpx;
  height: 15rpx;
}
.question .nav-wrapper .switch-bar {
  position: absolute;
  bottom: 1rpx;
  left: 194rpx;
  width: 50rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #22a0fa;
  transition: left 250ms ease;
}
.question .nav-wrapper .switch-bar.first-choose {
  left: 60rpx;
}
.question .nav-wrapper .switch-bar.third-choose {
  left: 300rpx;
}
.question .content {
  margin-top: 80rpx;
  background-color: #fff;
}
.question .content .my-question-answer .tool {
  position: relative;
  padding: 0 30rpx;
  border-bottom: 1px solid #f0f0f0;
  line-height: 60rpx;
  font-size: 22rpx;
  letter-spacing: 1rpx;
  color: #c5c3c3;
}
.question .content .my-question-answer .tool .switch-wrapper {
  position: absolute;
  top: 0;
  right: 30rpx;
  line-height: 60rpx;
}
.question .content .my-question-answer .no-data-prompt {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.question .content .my-question-answer .no-data-prompt image {
  display: block;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 180rpx;
  height: 101rpx;
}
.question .content .my-question-answer .no-data-prompt .message {
  font-size: 22rpx;
  letter-spacing: 1rpx;
  color: #c5c3c3;
}
.question .content .question-item {
  position: relative;
  padding: 20rpx 30rpx;
  padding-top: 40rpx;
  height: 220rpx;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
  font-size: 0;
}
.question .content .question-item .remark {
  display: inline-block;
  padding: 0 12rpx;
  margin-right: 15rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 700;
  vertical-align: top;
  line-height: 40rpx;
}
.question .content .question-item .remark.hot {
  background-color: #ffccc7;
  color: #f5222d;
}
.question .content .question-item .remark.stick {
  background-color: #ffe7ba;
  color: #fa8c16;
}
.question .content .question-item .remark.new {
  background-color: #bae7ff;
  color: #1890ff;
}
.question .content .question-item .title {
  display: inline;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  font-weight: 700;
  line-height: 40rpx;
}
.question .content .question-item .desc {
  margin-top: 20rpx;
  font-size: 22rpx;
  letter-spacing: 1rpx;
  color: #afaeae;
}
.question .content .question-item .hide-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.question .content .question-item .other-message {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 0;
}
.question .content .question-item .other-message .other-message-item {
  display: inline-block;
  margin-right: 20rpx;
  font-size: 0;
}
.question .content .question-item .other-message .other-message-item:last-child {
  margin-right: 0;
}
.question .content .question-item .other-message .other-message-item image {
  display: inline-block;
  margin-right: 10rpx;
  width: 25rpx;
  height: 25rpx;
  vertical-align: top;
}
.question .content .question-item .other-message .other-message-item image.eye {
  width: 32rpx;
  height: 32rpx;
}
.question .content .question-item .other-message .other-message-item .eye-text {
  line-height: 32rpx;
}
.question .content .question-item .other-message .other-message-item text {
  line-height: 25rpx;
  font-size: 20rpx;
  color: #afaeae;
}
