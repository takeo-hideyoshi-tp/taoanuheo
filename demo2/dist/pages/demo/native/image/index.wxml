<view style="display:flex;flex-direction:column;align-items:center;padding-top:25rpx;">
                <view>
                    <image src="{{state.src}}" mode="{{state.mode}}" bindload="dispatchEvent" binderror="dispatchEvent" data-load-uid="e5264" data-class-uid="c3861" data-error-uid="e5356" />
                </view>
                <view style="font-size: 32rpx;">
                    <text style="color: #999;">当前状态：</text>
                    <text style="{{props['style5764'] }}">{{state.state}}</text>
                </view>
                <scroll-view>
                    <block wx:for="{{state.modes}}" wx:for-item="mode" wx:for-index="index" wx:key="{{index}}"><view style="font-size: 32rpx;">
                                <button style="color: #999;" bindtap="dispatchEvent" data-tap-uid="e6815" data-class-uid="c3861" data-key="{{index}}">
                                    使用 {{mode.mode}}
                                </button>
                                <view>{{mode.text}}</view>
                            </view></block>
                </scroll-view>
            </view>